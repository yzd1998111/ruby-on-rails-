<h1>Searching for  - <%= @search_term %> </h1> 

<table border="1">
    <tr>
        <th>Image</th>
        <th>Name</th>
        <th>description</th>
    </tr>
<% @courses.each do |course| %>
    <tr>
        <tr class=<%= cycle('even','odd') %>>
            <td><%= image_tag(course["smallIcon"])%></td>
            <td><%= course["name"] %></td>
            <td><%= course["shortDescription"] %></td>
    </tr>
<% end %>
</table>
